{
  "name": "OpenClaw AI Dev Environment",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    },
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "postCreateCommand": "git clone https://github.com/openclaw/openclaw.git ~/openclaw && cd ~/openclaw && npm install && npm run build && npm link",
  "forwardPorts": [
    3000,
    8080
  ],
  "portsAttributes": {
    "3000": {
      "label": "OpenClaw Web UI",
      "onAutoForward": "openBrowser"
    },
    "8080": {
      "label": "OpenClaw API",
      "onAutoForward": "notify"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },
  "remoteUser": "vscode"
}
